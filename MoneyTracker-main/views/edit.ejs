<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>Edit Transaction</title>
</head>
<body style="background-color: #D2E0FB;">
  <div class="container">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid" style="background-color: #8EACCD;">
        <div class="collapse navbar-collapse"
          style=" display: flex; align-items: center; justify-content: space-evenly;">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/income">Income</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/expense">Expense</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <h2>Edit Transaction</h2>
    <form action="/update/<%= transaction._id %>" method="POST">
      <div class="form-group">
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button"
            data-bs-toggle="dropdown" aria-expanded="false" disabled>
            ENTRY
          </button>
          <div class="form-group">
            <label for="entry">Entry:</label>
            <input type="text" class="form-control" id="entry" name="entry" readonly value="<%= transaction.entry %>">
          </div>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#" data-value="income">Income</a></li>
            <li><a class="dropdown-item" href="#" data-value="expense">Expense</a></li>
          </ul>
        </div>
      </div>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Particular" name="title" id="title" value="<%= transaction.title %>" required>
      </div>
      <div class="form-group">
        <input type="number" class="form-control" placeholder="Amount" id="amount" name="amount" value="<%= transaction.amount %>" required>
      </div>
      <button type="submit" class="btn btn-success">Done</button>
    </form>
  

  </div>
 
  <script>
    // Disable the 'Entry' dropdown after clicking the edit link
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelector('.dropdown-toggle').setAttribute('disabled', true);
    });
  </script>
</body>
</html>
